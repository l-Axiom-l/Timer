<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeaTimer.MainPage">

    <Grid RowDefinitions="70, 160, 160, 160, 160, 160, 160" x:Name="layout" Margin="10, 10, 10 ,10" RowSpacing="12" ColumnSpacing="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name = "Create" Text="+" Grid.Row="0" Grid.Column="0"></Button>
        <Entry x:Name="Input" Grid.Row="0" Grid.Column="1" Keyboard="Numeric"></Entry>

    </Grid>
    
</ContentPage>
